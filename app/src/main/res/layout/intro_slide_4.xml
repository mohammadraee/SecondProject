<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slide_4_bg_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/slide_content_margin_top"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/slide_img_width_size"
            android:layout_height="@dimen/slide_img_height_size"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/ic_travel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/slide_title_margin_top"
            android:gravity="center_horizontal"
            android:text="@string/slide_4_title"
            android:textColor="@color/white"
            android:textSize="@dimen/slide_title_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/slide_desc_margin_top"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/slide_desc_line_space"
            android:paddingLeft="@dimen/slide_desc_padding_rl"
            android:paddingRight="@dimen/slide_desc_padding_rl"
            android:text="@string/slide_4_desc"
            android:textColor="@color/white"
            android:textSize="@dimen/slide_desc_text_size" />

    </LinearLayout>

</RelativeLayout>