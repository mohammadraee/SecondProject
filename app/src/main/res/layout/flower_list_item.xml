<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_more"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/icon_more_vertical"
        android:rotation="90"/>

    <ImageView
        android:id="@+id/flower_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/aloe_vera" />

    <TextView
        android:id="@+id/flower_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/flower_img"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/icon_more"
        android:layout_toRightOf="@id/flower_img"
        android:text="aloe vera"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flower_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flower_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/flower_img"
        android:text="flower category"
        android:textColor="#595858"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/flower_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/flower_img"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:text="99.9 $"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal" />


</RelativeLayout>